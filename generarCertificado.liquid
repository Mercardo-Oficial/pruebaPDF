{% assign item = order.line_items[0]%} {%capture student%}
    {{item.properties.Nombre}} {{item.properties.Apellido}} {%endcapture%}
    {%capture parent%} {{order.billing_address.first_name}}
    {{order.billing_address.last_name}}<sup>*</sup> {%endcapture%}
    {%capture titulo%}{{item.title | split: '(' | first }}{%endcapture%}
    {%capture autor%}{{ item.title | split:'(' | last | split:')' | first }}{%endcapture%}

    {% if checkout %}
    {% assign line_items = checkout.line_items %}
    {% assign id = checkout.order_id %}
    {% assign email = checkout.email %}
    {% endif %}

    <style>
        #certificate {
            margin-top: 25px;
            height: 3em;
            background-color: #28a745;
            color: white;
            width: 12em;
            font-size: 2em;
        }

        #certificate:hover,
        button:hover {
            background-color: #23963e;

            cursor: pointer;
        }

        .button {
            background-color: #4CAF50;
            /* Green */
            border: none;
            color: white;
            padding: 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 22px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .button4 {
            border-radius: 12px;
        }
    </style>


    {%if item.product.tags[0] == "tese"%}
    <a target="_blank"
        href="https://mercadro-oficial.github.io/pruebaPDF/?nombre={%if student.size > 3%}{{student}}{%else%}{{parent}}{%endif%}&fecha={{ order.created_at | date: "%d/%m/%Y" }}&titulo={{titulo}}&autor={{autor}}&isbn={{ item.sku | split:'_' | first | default:"N/D" }}&orden={{order.name | split:'#' | last}}">
        <button id="certificate">Generar Certificado</button>
    </a>
    {%else%}
    {% capture downloads %}
    {% for line in line_items %}
    {% if line.variant.metafields.dda.digital %}
    1
    {% endif %}
    {% endfor %}
    {% endcapture %}
    {% if downloads.size > 0 %}<br /><a
        href="https://transactions.sendowl.com/orders/shopify_return/132077?order_id={{ id }}&email={{ email }}">

        <head>
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <style>

            </style>
        </head>

        <body>
            <button class="button button4"><b><u>Da clic aquí para obtener tu acceso*</u></b>
            </button>
            <p><textarea rows="2" cols="53">
*Si seleccionaste pago en OXXO o depósito bancario, conserva esta ventana abierta. Una vez realizado el pago da clic en el botón verde.</textarea>
            </p>
        </body>
    </a>
    {% endif %}
    {% endif %}